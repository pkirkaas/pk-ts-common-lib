{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "strict": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "checkJs": true,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowUmdGlobalAccess": true,
        "allowJs": true,
        "newLine": "lf",
        "moduleResolution": "NodeNext",
        "module": "NodeNext"
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
        "esm": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "dist/**/*",
        "*.d.ts",
        "./src/index.ts",
        "./src/common-operations.ts"
    ],
    "include": [
        "./src/**/*",
    ],
    "typeRoots": [
        "node_modules/@types",
        //  "src/custom_types/"
    ]
}
